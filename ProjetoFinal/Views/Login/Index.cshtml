@model ProjetoFinal.Models.Artesao

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Faça seu login</h1>
<link rel="stylesheet" href="~/css/form.css" />
<div class="container login-container"">
    <div class="row d-flex justify-content-center">
        <div class="login-form-1">
            <img src="~/css/Imagens/patioba_logo_small.png" alt="patioba-logo" width="100">
            <form asp-action="Login">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <label style="color: red">@ViewBag.ErrorMessage</label>
                <div class="form-group" asp-action="Login">
                    <input asp-for="email" placeholder="@ViewBag.usuarioPadrao" style="min-width:300px;" class="form-control" />
                    <span asp-validation-for="email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="senha" class="control-label"></label>
                    <input asp-for="senha" type="password" class="form-control" style="min-width:300px;" />
                    <span asp-validation-for="senha" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Login" class="btn btn-success" />
                    <a asp-controller="Artesao" asp-action="Create">Cadastrar artesão</a>
                </div>
            </form>

        </div>
    </div>
</div>