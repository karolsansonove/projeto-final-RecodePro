@model ProjetoFinal.Models.Artesao

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<h4>Login</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <label style="color: red">@ViewBag.ErrorMessage</label>

            <div class="form-group">
                <label asp-for="email" class="control-label"></label>
                <input asp-for="email" placeholder="@ViewBag.usuarioPadrao" class="form-control" />
                <span asp-validation-for="email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="senha" class="control-label"></label>
                <input asp-for="senha" type="password" class="form-control" />
                <span asp-validation-for="senha" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Artesao" asp-action="Create">Novo artesão</a>
</div>

