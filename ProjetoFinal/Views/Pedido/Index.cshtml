@model IEnumerable<ProjetoFinal.Models.Pedido>

@{
    ViewData["Title"] = "Index";
}

<h1>Pedidos</h1>

<p>
    <a asp-action="Create">Novo Pedido</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Data do pedido
            </th>
            <th>
                Prazo de entrega
            </th>
            <th>
                ID Cliente
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DataPedido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrazoEntrega)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdCliente)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdPedido">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.IdPedido">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.IdPedido">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
