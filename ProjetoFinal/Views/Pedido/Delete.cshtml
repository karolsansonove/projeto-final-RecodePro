@model ProjetoFinal.Models.Pedido

@{
    ViewData["Title"] = "Delete";
}

<h3>Confirmar a exclusão do pedido?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Data do Pedido
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataPedido)
        </dd>
        <dt class="col-sm-2">
            Prazo da Entrega
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PrazoEntrega)
        </dd>
        <dt class="col-sm-2">
            ID Cliente
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdCliente)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdPedido" />
        <input type="submit" value="Excluir" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar para Pedido</a>
    </form>
</div>
