@model ProjetoFinal.Models.Pedido

@{
    ViewData["Title"] = "Pedido";
}
<h1>Deletar</h1>

<h3>Você tem certeza que quer deletar isso?</h3>
<div>
    <h4>Pedido</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataPedido)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataPedido)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cliente)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cliente.IdCliente)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Produto)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Produto.IdProduto)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="IdPedido" />
        <input type="submit" value="Deletar" class="btn btn-danger" /> 
        <a class="btn btn-success" asp-action="Index">Voltar</a>
    </form>
</div>
