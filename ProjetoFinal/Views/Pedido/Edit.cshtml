@model ProjetoFinal.Models.Pedido

@{
    ViewData["Title"] = "Pedido";
}

<h4>Pedido</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdPedido" />
            <div class="form-group">
                <label asp-for="DataPedido" class="control-label"></label>
                <input asp-for="DataPedido" class="form-control" />
                <span asp-validation-for="DataPedido" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClienteIdCliente" class="control-label"></label>
                <select asp-for="ClienteIdCliente" class="form-control" asp-items="ViewBag.ClienteIdCliente"></select>
                <span asp-validation-for="ClienteIdCliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProdutoIdProduto" class="control-label"></label>
                <select asp-for="ProdutoIdProduto" class="form-control" asp-items="ViewBag.ProdutoIdProduto"></select>
                <span asp-validation-for="ProdutoIdProduto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-success" asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
