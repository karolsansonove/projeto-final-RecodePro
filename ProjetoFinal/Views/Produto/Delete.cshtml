@model ProjetoFinal.Models.Produto

@{
    ViewData["Title"] = "Delete";
}

<h3>Confirmar a exclusão do produto?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            Descrição
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class = "col-sm-2">
            Preço
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Preco)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Estoque)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Estoque)
        </dd>
        <dt class = "col-sm-2">
            URL da Imagem
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UrlImagem)
        </dd>
        <dt class = "col-sm-2">
            ID Vendedor
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdVendedor)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdProduto" />
        <input type="submit" value="Excluir" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar para Produtos</a>
    </form>
</div>
