<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="shortcut icon" href="~/css/Imagens/icon_0513d35fcf2285494e1e0a7b18115fb2.ico" type="image/x-icon">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>

    <header>
        <nav class="navbar navbar-expand-lg navbar-light border-bottom box-shadow mb-3" style="background-color: #7FC8A9;">
            <div class="container">
                <a class="navbar-brand text-white mr-4 pr-4" asp-area="" asp-controller="Home" asp-action="Index">Patioba</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent" >

                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Produto" asp-action="Index">Produtos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Cliente" asp-action="MyDetails">Meu cadastro</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Suporte" asp-action="Create" id="faleconosco">Fale conosco</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Área do Artesão
                            </a>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item" asp-controller="Produto" asp-action="List">Produtos</a>
                                <a class="dropdown-item" asp-controller="Cliente" asp-action="Index">Clientes</a>
                                <a class="dropdown-item" asp-controller="Pedido" asp-action="Index">Pedidos</a>
                                <a class="dropdown-item" asp-controller="Artesao" asp-action="Index">Artesãos</a>
                                <a class="dropdown-item" asp-controller="Suporte" asp-action="Index">Suporte</a>
                            </div>
                        </li>
                     
                    </ul>
                </div>

            </div>

        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted" style="background-color: #7FC8A9;">
        <div class="container text-white">
            &copy; 2021 - Patioba - <a asp-area="" asp-controller="Suporte" asp-action="Create">Fale conosco</a> -
            <a class="icon_facebook" href="https://www.facebook.com/pages/patioba/" target="_blank">
                <i class="fa fa-facebook-official fa-lg"></i>
            </a> -
            <a class="icon_whatsapp" style="color:green;" href="https://wa.me/2199999999" target="_blank">
                <i class="fa fa-whatsapp fa-lg"></i>
            </a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>