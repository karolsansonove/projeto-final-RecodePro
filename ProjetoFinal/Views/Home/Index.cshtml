@{
    ViewData["Title"] = "Home";
}
<link rel="stylesheet" href="~/css/site.css" />

<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="~/css/Imagens/1.jpg" alt="First slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/css/Imagens/2.jpg" alt="Second slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/css/Imagens/3.jpg" alt="Third slide">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<h1>Sugestões para você</h1>

<div class="container my-4">
    <div class="row">
        <div class="col-4 my-4">
            <div class="card">
                <img class="card-img-top" src="~/css/Imagens/brincos (1).png" alt="Card image" style="width:100%">
                <div class="card-body">
                    <h4 class="card-title">Brincos</h4>
                    <p class="card-text">
                    <p>
                        Brincos confeccionadas artesanalmente
                    </p>
                    
                    <a class="btn btn-success" asp-controller="Produto" asp-action="Index">Conferir</a>
                </div>
            </div>
        </div>

        <div class="col-4 my-4">
            <div class="card">
                <img class="card-img-top" src="~/css/Imagens/potes (1).jpg" alt="Card image" style="width:100%">
                <div class="card-body">
                    <h4 class="card-title">Potes</h4>
                    <p class="card-text">
                    <p>
                        Potes especiais da floresta
                    </p>
                    </p>
                    <a class="btn btn-success" asp-controller="Produto" asp-action="Index">Conferir</a>
                </div>
            </div>
        </div>

        <div class="col-4 my-4">
            <div class="card">
                <img class="card-img-top" src="~/css/Imagens/cestoo.jpg" alt="Card image" style="width:100%">
                <div class="card-body">
                    <h4 class="card-title">Cestos</h4>
                    <p class="card-text">
                    <p>
                      Cestos especiais da aldeia
                    </p>
                    
                    <a class="btn btn-success" asp-controller="Produto" asp-action="Index">Conferir</a>
                </div>
            </div>
        </div>
        <a class="btn btn-success btn-group-lg btn-block " asp-controller="Cliente" asp-action="Create">Cadastre-se</a>
    </div>
</div>

